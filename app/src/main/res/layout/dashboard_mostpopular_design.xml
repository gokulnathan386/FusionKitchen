<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="200dp"
    android:gravity="center"
    android:id="@+id/linear_layout_listview"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/circularView"
            android:layout_width="230dp"
            android:layout_height="130dp"
            android:layout_margin="5dp"
            android:elevation="12dp"
            android:innerRadius="0dp"
            android:shape="rectangle"
            android:thicknessRatio="1.9"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/Most_Popular_ImageView_Icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                />
            <LinearLayout
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="wrap_content"
                android:padding="2dp"
                android:background="@drawable/offer_background"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:gravity="center"
                        android:layout_marginRight="3dp"
                        android:text="\u00a3"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:textSize="10dp">
                    </TextView>

                <TextView
                    android:id="@+id/Enter_your_offer_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center"
                    android:layout_marginRight="3dp"
                    android:text="10% OFF"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="10dp">
                </TextView>

                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Enter_your_Name_TextView"
                    android:textColor="#204356"
                    android:textSize="12dp"
                    android:text="Ragam"
                    android:gravity="left"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/Enter_your_Rating"
                        android:textColor="#204356"
                        android:textSize="12dp"
                        android:text="4.5"
                        android:layout_marginTop="2dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:src="@drawable/yellow_star"
                        android:layout_width="15dp"
                        android:layout_height="15dp">
                    </ImageView>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Enter_Your_Area_textView"
                    android:textColor="#A1AAB2"
                    android:textSize="12dp"
                    android:text="Indian, Kerala, Pizza"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                    <TextView
                        android:id="@+id/Enter_your_PerOrder_textView"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textColor="#FFA701"
                        android:textSize="12dp"
                        android:text="Pre-Order"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

