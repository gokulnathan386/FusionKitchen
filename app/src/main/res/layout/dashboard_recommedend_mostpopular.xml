<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:gravity="center"
    android:background="#fafafa"
    android:id="@+id/linear_layout_listview"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_margin="5dp"
        android:elevation="12dp"
        android:innerRadius="0dp"
        android:shape="rectangle"
        android:thicknessRatio="1.9"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/circularView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:elevation="12dp"
                android:innerRadius="0dp"
                android:shape="rectangle"
                android:thicknessRatio="1.0"
                android:layout_gravity="center"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/recommendRestImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    />

                <LinearLayout
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_width="wrap_content"
                    android:padding="2dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/offer_bg_dashboard"
                    android:backgroundTint="#9FE870"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <!--   <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:fontFamily="@font/poppins_regular"
                               android:gravity="center"
                               android:layout_marginRight="3dp"
                               android:text="\u00a3"
                               android:layout_gravity="center"
                               android:textColor="#214357"
                               android:textSize="10dp">
                           </TextView>-->

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginRight="3dp"
                            android:text="£5 off your order of £2"
                            android:layout_gravity="center"
                            android:textColor="#214357"
                            android:textSize="10dp">
                        </TextView>

                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_weight="1"
                        android:gravity="start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_marginRight="5dp"
                            android:layout_gravity="center"
                            android:src="@drawable/yellow_star"
                            android:layout_width="15dp"
                            android:layout_height="15dp">
                        </ImageView>

                        <TextView
                            android:id="@+id/Enter_your_Rating"
                            android:textColor="#384656"
                            android:textSize="12dp"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:text="4.9 Good (7+)"
                            android:layout_marginTop="2dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins_bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:gravity="end"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:gravity="end"
                            android:layout_gravity="center"
                            android:src="@drawable/fi_1584942_miles_icon"
                            android:layout_width="15dp"
                            android:layout_height="15dp">
                        </ImageView>

                        <Space
                            android:layout_width="5dp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/Enter_your_Name_TextView"
                            android:textColor="#A0A0A0"
                            android:textSize="12dp"
                            android:text="20-30 Mins"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:layout_marginTop="2dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>


                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/ClientName"
                        android:textColor="#214357"
                        android:textSize="12dp"
                        android:text="Demo 2"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>

                    <TextView
                        android:textColor="#214357"
                        android:textSize="12dp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:text="Indian, Burgers, Pizza, £1 Snacks."
                        android:fontFamily="@font/poppins_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>


                </LinearLayout>

                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_weight="1"
                        android:gravity="start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_marginRight="4dp"
                            android:layout_gravity="center"
                            android:src="@drawable/fi_location_icon"
                            android:layout_width="15dp"
                            android:layout_height="15dp">
                        </ImageView>
                        <TextView
                            android:textColor="#A0A0A0"
                            android:textSize="12dp"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:text="2.07 Miles Away"
                            android:layout_marginTop="2dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="10dp"
                            android:paddingTop="2dp"
                            android:paddingStart="10dp"
                            android:paddingBottom="2dp"
                            android:background="@drawable/offer_bg_dashboard"
                            android:backgroundTint="#108060">

                            <TextView
                                android:textColor="#FFFFFF"
                                android:textSize="10dp"
                                android:singleLine="true"
                                android:ellipsize="end"
                                android:text="Open"
                                android:layout_marginHorizontal="10dp"
                                android:fontFamily="@font/poppins_semibold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>

