<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linerhead"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="117.5dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/shopimg"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:scaleType="centerCrop"
                                android:src="@drawable/sliedtwo"
                                android:layout_gravity="center"
                            />

                           <!-- android:scaleType="fitXY"-->

                            <LinearLayout
                                android:id="@+id/View_your_star_rating"
                                android:layout_marginTop="-110dp"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/restaurants_order_border"
                                android:layout_width="35dp"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:layout_height="20dp">

                                <ImageView
                                    android:layout_gravity="center"
                                    android:src="@drawable/white_star"
                                    android:layout_width="10dp"
                                    android:layout_height="10dp">
                                </ImageView>

                                <TextView
                                    android:id="@+id/clent_rating"
                                    android:gravity="center"
                                    android:text="4.5"
                                    android:textSize="10dp"
                                    android:layout_marginLeft="3dp"
                                    android:layout_marginTop="1dp"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                </TextView>

                            </LinearLayout>



                        </LinearLayout>

                            <LinearLayout
                            android:layout_marginLeft="5dp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                            <LinearLayout
                                android:weightSum="2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/clent_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1.8"
                                        android:fontFamily="@font/poppins_bold"
                                        android:text="Ragam"
                                        android:singleLine="false"
                                        android:textColor="#000000"
                                        android:textSize="12dp">
                                    </TextView>

                                    <RelativeLayout
                                        android:layout_weight="0.2"
                                        android:gravity="end"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent">

                                    <LinearLayout
                                        android:background="#000000"
                                        android:layout_width="70dp"
                                        android:layout_marginRight="5dp"
                                        android:layout_height="20dp">

                                    <TextView
                                        android:id="@+id/client_openstatus"
                                        android:gravity="center"
                                        android:text="PRE ORDER"
                                        android:textSize="8dp"
                                        android:padding="3dp"
                                        android:textColor="@color/white"
                                        android:fontFamily="@font/poppins_semibold"
                                        android:layout_gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                    </TextView>

                                   </LinearLayout>

                                 </RelativeLayout>


                            </LinearLayout>


                                <TextView
                                    android:id="@+id/clent_submenu"
                                    android:layout_marginTop="5dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_regular"
                                    android:text="Indian, Kerala, Pizza"
                                    android:textColor="#66676D"
                                    android:textSize="12dp">
                                </TextView>

                                <LinearLayout
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <!--    <TextView
                                        android:gravity="center"
                                        android:text="\u00a3"
                                        android:textSize="12dp"
                                        android:layout_marginRight="2dp"
                                        android:textColor="#276CF6"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/poppins_bold"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent">
                                    </TextView>-->


                                    <TextView
                                        android:id="@+id/client_offerone"
                                        android:gravity="center"
                                        android:text=""
                                        android:textSize="12dp"
                                        android:textColor="#276CF6"
                                        android:layout_gravity="center"
                                        android:layout_marginRight="5dp"
                                        android:fontFamily="@font/poppins_bold"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">
                                    </TextView>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_height="wrap_content">
                                        <TextView
                                            android:id="@+id/use_code_textview"
                                            android:gravity="center"
                                            android:text=""
                                            android:textSize="12dp"
                                            android:textColor="#66676D"
                                            android:layout_gravity="center"
                                            android:layout_marginRight="5dp"
                                            android:fontFamily="@font/poppins_regular"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">
                                        </TextView>

                                        <TextView
                                            android:id="@+id/use_code_discount"
                                            android:gravity="center"
                                            android:text=""
                                            android:textSize="12dp"
                                            android:textColor="#204356"
                                            android:layout_gravity="center"
                                            android:layout_marginRight="1dp"
                                            android:maxLength="8"
                                            android:fontFamily="@font/poppins_regular"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">
                                        </TextView>

                                        <TextView
                                            android:id="@+id/three_dot"
                                            android:text="..."
                                            android:textSize="12dp"
                                            android:textColor="#204356"
                                            android:visibility="gone"
                                            android:fontFamily="@font/poppins_regular"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">
                                        </TextView>

                                    </LinearLayout>


                                <TextView
                                    android:visibility="gone"
                                    android:gravity="center"
                                    android:text="UseCode"
                                    android:textSize="10dp"
                                    android:textColor="#66676D"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/poppins_regular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent">
                                </TextView>
                                <TextView
                                    android:visibility="gone"
                                    android:id="@+id/coupon_code"
                                    android:gravity="center"
                                    android:text="”FUSION10”"
                                    android:textSize="10dp"
                                    android:textColor="#204356"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="5dp"
                                    android:fontFamily="@font/poppins_regular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent">
                                </TextView>

                            </LinearLayout>


                            <View
                                android:layout_marginTop="5dp"
                                android:background="#F4F5F5"
                                android:layout_marginRight="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="1dp">
                            </View>

                                <LinearLayout
                                    android:gravity="center"
                                    android:layout_marginTop="7dp"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:weightSum="3"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <LinearLayout
                                            android:id="@+id/takeeay_layout"
                                            android:layout_weight="1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent">

                                                <ImageView
                                                    android:layout_gravity="center"
                                                    android:src="@drawable/takeawayicon"
                                                    android:layout_width="12dp"
                                                    android:layout_height="12dp">
                                                </ImageView>
                                                <TextView
                                                    android:id="@+id/client_takeaway"
                                                    android:gravity="center"
                                                    android:layout_gravity="center_vertical"
                                                    android:textColor="#66676D"
                                                    android:textSize="12dp"
                                                    android:text="0 Mins"
                                                    android:layout_marginTop="3dp"
                                                    android:layout_marginLeft="2dp"
                                                    android:fontFamily="@font/poppins_regular"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content">
                                                </TextView>

                                        </LinearLayout>


                                    <LinearLayout
                                        android:id="@+id/delivery_linearlayout"
                                        android:layout_weight="1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent">

                                            <ImageView
                                                android:layout_marginLeft="5dp"
                                                android:layout_gravity="center"
                                                android:src="@drawable/delivery_bike"
                                                android:layout_width="12dp"
                                                android:layout_height="12dp">
                                            </ImageView>

                                            <TextView
                                                android:id="@+id/clent_delivery"
                                                android:textColor="#66676D"
                                                android:textSize="12dp"
                                                android:text="0 Mins"
                                                android:layout_gravity="center_vertical"
                                                android:layout_marginLeft="2dp"
                                                android:layout_marginTop="3dp"
                                                android:fontFamily="@font/poppins_regular"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content">
                                            </TextView>
                                    </LinearLayout>

                                        <LinearLayout
                                            android:layout_weight="1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent">

                                         <ImageView
                                            android:layout_marginLeft="5dp"
                                            android:layout_gravity="center"
                                            android:src="@drawable/delivery_location"
                                            android:layout_width="12dp"
                                            android:layout_height="12dp">
                                        </ImageView>

                                        <TextView
                                            android:id="@+id/client_deliverymin"
                                            android:textColor="#66676D"
                                            android:textSize="12dp"
                                            android:layout_gravity="center_vertical"
                                            android:text="0.00 miles"
                                            android:layout_marginTop="3dp"
                                            android:layout_marginLeft="2dp"
                                            android:fontFamily="@font/poppins_regular"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">
                                        </TextView>

                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>


                            </LinearLayout>

                </LinearLayout>

        </androidx.cardview.widget.CardView>

</LinearLayout>