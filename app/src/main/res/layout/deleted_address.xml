<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tranfer_color"
    app:layout_constraintCircleRadius="@dimen/_20sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintCircleRadius="@dimen/_20sdp">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">


            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="15dp"
                android:gravity="center_horizontal"
                android:src="@drawable/deleteimg" />

            <TextView
                android:id="@+id/text_dialog1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/hindvadodara_bold"
                android:gravity="center_horizontal"
                android:text="Delete Address"
                android:textColor="#ff2860"
                android:textSize="23sp" />


            <TextView
                android:id="@+id/text_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_dialog1"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/hindvadodara_regular"
                android:gravity="center_horizontal"
                android:text="Confirm that you would link to permanently \ndelete the address from the address book."
                android:textColor="#445963"
                android:textSize="13sp" />


            <LinearLayout
                android:id="@+id/edit_btns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_saveas">


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/cancel_delete_button"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@color/card_no_delivery"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:text="Cancel"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:textAllCaps="false"
                    android:textColor="@color/welcome_button_color"
                    android:textSize="@dimen/_15sdp" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/confirm_delete_button"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:background="@color/welcome_button_color"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:text="Confirm"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15sdp" />


            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>