<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="160dp"
    android:id="@+id/Most_Popular_Linear_Layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="10dp"
    android:background="@drawable/postal_code_background">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginLeft="2dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        >
    <androidx.cardview.widget.CardView
        android:id="@+id/circularView"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_margin="5dp"
        android:elevation="12dp"
        android:innerRadius="0dp"
        android:shape="rectangle"
        android:thicknessRatio="1.9"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/Most_Popular_ImageView_Icon"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/Most_Popular_TextView_Offer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:text="10% OFF"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="#1ACCCCCC"
            android:elevation="150dp"
            android:textSize="15dp">
        </TextView>

    </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:orientation="vertical"
        android:weightSum="4"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_weight="1"
            android:id="@+id/Most_Popular_TextView_name"
            android:fontFamily="@font/poppins_bold"
            android:textSize="15dp"
            android:text="Chennai Dosa \nCoventry"
            android:textColor="#204356"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:id="@+id/Most_Popular_TextView_Area"
            android:fontFamily="@font/poppins_light"
            android:textSize="15dp"
            android:layout_weight="1"
            android:text="Kerala, Pizza"
            android:textColor="#66676D"
            android:layout_marginTop="-10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>

        <LinearLayout
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="-20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/green_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </ImageView>

            <TextView
                android:id="@+id/Most_Popular_TextView_Rate"
                android:textSize="15dp"
                android:textColor="#204356"
                android:text="4.5"
                android:textStyle="bold"
                android:layout_marginTop="3dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/poppins_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>

        </LinearLayout>

        <TextView
            android:id="@+id/Most_Popular_TextView_TakeWay_status"
            android:fontFamily="@font/poppins_medium"
            android:textSize="15dp"
            android:text="Pre-Order"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textColor="#D02F3E"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>

    </LinearLayout>

</LinearLayout>

