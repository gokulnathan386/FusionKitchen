<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_sheet_bg"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            app:lottie_autoPlay="true"
            android:layout_gravity="center_horizontal"
            app:lottie_rawRes="@raw/share_map"
            app:lottie_loop="true"/>

        <TextView
            android:text="Share order tracking"
            android:textSize="20dp"
            android:textColor="#17284D"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/metropolis_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:layout_marginTop="15dp"
            android:text="Your details and delivery location will be \nvisible to anyone you share this link with,\ntill your order is delivered"
            android:textSize="15dp"
            android:textColor="#17284D"
            android:lineSpacingExtra="8dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/metropolis_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/share_now_btn"
            style="@style/Favourite_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="50dp"
            android:backgroundTint="@color/welcome_btn_color"
            android:fontFamily="@font/poppins_bold"
            android:text="Share now"
            android:textAllCaps="false"
            android:textSize="18dp"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>