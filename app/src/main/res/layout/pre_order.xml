<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

<androidx.cardview.widget.CardView
    android:id="@+id/ordermode_popup_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/tranfer_color"
    android:visibility="gone"
  >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/layout"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="-55dp"
            android:backgroundTint="#276CF6"
            app:cardCornerRadius="50dp"
            app:cardElevation="1dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:id="@+id/edit_btns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/delivery_but"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:background="@drawable/background_button"
                    android:backgroundTint="@color/pre_mode_bg_one">

                    <TextView
                        android:id="@+id/delivery_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="center"
                        android:text="Delivery"
                        android:textAllCaps="false"
                        android:textColor="@color/pre_mode_txt_one"
                        android:textSize="17dp" />

                    <TextView
                        android:padding="2dp"
                        android:id="@+id/delivery_tattime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/delivery_txt"
                        android:layout_marginBottom="3dp"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:text=""
                        android:textAllCaps="false"
                        android:textColor="@color/pre_mode_txt_one"
                        android:textSize="10dp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/collection_but"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:background="@drawable/background_button"
                    android:backgroundTint="@color/pre_mode_bg_two">

                    <TextView
                        android:id="@+id/colli_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="center"
                        android:text="Collection"
                        android:textAllCaps="false"
                        android:textColor="@color/pre_mode_txt_two"
                        android:textSize="17dp" />

                    <TextView
                        android:padding="2dp"
                        android:id="@+id/colloetion_tattime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/colli_txt"
                        android:layout_marginBottom="3dp"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:text=""
                        android:textAllCaps="false"
                        android:textColor="@color/pre_mode_txt_two"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                </RelativeLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/pre_rounded"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/hibg_rounded">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                  <!--  <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/loading_imageView1"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_gravity="center"
                        android:src="@drawable/delivery_icon" />

                    <include
                        layout="@layout/custom_loading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                     />-->

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                  >
                        <pl.droidsonroids.gif.GifImageView
                            android:id="@+id/loading_imageView1"
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:layout_gravity="center"
                            android:src="@drawable/delivery_icon" />

                        <include
                            layout="@layout/custom_loading"
                            android:layout_below="@+id/loading_imageView1"
                            android:layout_width="match_parent"
                            android:layout_marginTop="-150dp"
                            android:layout_height="wrap_content"
                            />

                    </RelativeLayout>

                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/loading_imageView2"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_gravity="center"
                        android:src="@drawable/collection_icon"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/sevenday_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:text="Select a delivery time \n up to 7 days in advance"
                        android:textColor="@color/black"
                        android:textSize="17dp" />

                    <LinearLayout
                        android:id="@+id/card_change"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/bun_asap"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/background_asap"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center"
                            android:text="ASAP"
                            android:textAllCaps="false"
                            android:textColor="#BCBBBC"
                            android:textSize="@dimen/_12sdp" />


                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/bun_today"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/background_today"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center"
                            android:text="Today"
                            android:textAllCaps="false"
                            android:textColor="#BCBBBC"
                            android:textSize="@dimen/_12sdp" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/bun_later"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/background_later"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center"
                            android:text="Later"
                            android:textAllCaps="false"
                            android:textColor="#BCBBBC"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/today_time_layer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:layout_marginRight="100dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/background_spinner"
                        android:orientation="vertical"
                        android:visibility="gone">


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/time_today_img"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:paddingLeft="10dp"
                                android:src="@drawable/clock_icon" />

                           <!-- android:src="@drawable/drawableclock"-->

                            <Spinner
                                android:id="@+id/today_time"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginLeft="3dp"
                                android:layout_toRightOf="@+id/time_today_img"
                                android:background="@android:color/transparent"
                                android:overlapAnchor="false"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="20dp"
                                android:src="@drawable/downarrow" />


                        </RelativeLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/later_time_layer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="50dp"
                            android:background="@drawable/background_spinner">

                            <ImageView
                                android:id="@+id/date_later_img"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:paddingLeft="10dp"
                                android:src="@drawable/calendar_icon" />

                            <Spinner
                                android:id="@+id/later_date"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginLeft="3dp"
                                android:layout_toRightOf="@+id/date_later_img"
                                android:background="@android:color/transparent"
                                android:overlapAnchor="false"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="20dp"
                                android:src="@drawable/downarrow" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="100dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="100dp"
                            android:layout_marginBottom="10dp"
                            android:id="@+id/later_timing_layer"
                            android:background="@drawable/background_spinner">

                            <ImageView
                                android:id="@+id/time_later_img"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:paddingLeft="10dp"
                                android:src="@drawable/clock_icon" />

                            <Spinner
                                android:id="@+id/later_time"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginLeft="3dp"
                                android:layout_toRightOf="@+id/time_later_img"
                                android:background="@android:color/transparent"
                                android:overlapAnchor="false"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="20dp"
                                android:src="@drawable/downarrow" />


                        </RelativeLayout>


                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/update_mode"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/menu_txt_tr"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:text="Takeaway Closed for Delivery"
                android:textAllCaps="false"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="17sp" />

        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>