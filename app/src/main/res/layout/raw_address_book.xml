<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_10sdp"
    android:background="@color/white"
    android:backgroundTint="@color/white">


    <RelativeLayout
        android:id="@+id/layout_titel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/edit_type"
        tools:ignore="MissingConstraints">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/edit_type"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/edit_type"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/simpleRadioButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Home"
                    android:textColor="@color/welcome_button_color"
                    android:textSize="@dimen/_15sdp" />

                <Switch
                    android:id="@+id/simpleSwitch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:checked="false"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="right"
                    android:switchMinWidth="60dp"
                    android:text="Primary"
                    android:textColor="@color/welcome_button_color"
                    android:textOff="Off"
                    android:textOn="On"
                    android:textSize="@dimen/_13sdp"
                    android:thumbTint="@color/switch_thumb_selector"
                    android:trackTint="@color/switch_track_selector" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/add_bg">


                <TextView
                    android:id="@+id/address_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_toLeftOf="@+id/delete_address"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="left"
                    android:text="3 High Street"
                    android:textColor="@color/txt_ten"
                    android:textSize="@dimen/_15sdp" />

                <TextView
                    android:id="@+id/address_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_18sdp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Edit"
                    android:textColor="@color/txt_blu_col"
                    android:textSize="@dimen/_13sdp" />

                <ImageView
                    android:id="@+id/delete_address"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/address_edit"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/delete" />


            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>