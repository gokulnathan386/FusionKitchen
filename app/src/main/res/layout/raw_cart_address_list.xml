<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:id="@+id/layout_titel"
        tools:ignore="MissingConstraints">


        <ImageView
            android:id="@+id/change_address_logo"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:maxLines="1"
            android:src="@drawable/address"
            android:text=""
            android:textStyle="bold" />


        <TextView
            android:id="@+id/changea_ddress_titels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_toLeftOf="@+id/edit_address"
            android:layout_toRightOf="@+id/change_address_logo"
            android:fontFamily="@font/roboto_bold"
            android:text="Delivery to Home"
            android:textColor="@color/black"
            android:textSize="18dp" />


        <TextView
            android:id="@+id/change_cus_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/changea_ddress_titels"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_toRightOf="@+id/change_address_logo"
            android:fontFamily="@font/roboto_regular"
            android:text="2A, London Road,London SK11 6TJ"
            android:textColor="@color/txt_ten"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/edit_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:fontFamily="@font/roboto_medium"
            android:text="Edit"
            android:textColor="@color/txt_ten"
            android:textSize="16dp" />


        <View
            android:id="@+id/change_address_view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/change_cus_address"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@color/txt_elven" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>