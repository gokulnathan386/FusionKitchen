<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/menu_addon_item_amout"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/menu_addon_item_extra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/poppins_medium"
            android:text=""
            android:textColor="@color/menu_item_desc"
            android:textSize="15sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/menu_addon_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:fontFamily="@font/poppins_medium"
            android:text=""
            android:textColor="@color/menu_item_desc"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/menu_addon_item_amout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_toLeftOf="@+id/cb"
        android:fontFamily="@font/poppins_bold"
        android:text=""
        android:textColor="@color/txt_ten"
        android:textSize="15sp" />

    <CheckBox
        android:id="@+id/cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:button="@drawable/checkbox_background" />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/linerLayout"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/txt_elven" />
</RelativeLayout>