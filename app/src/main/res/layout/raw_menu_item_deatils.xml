<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:background="#F4F5F5"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content"
   >
    <!--android:background="@drawable/border"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/txt_three"
            android:visibility="gone">

            <TextView
                android:id="@+id/menu_item_cat_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:fontFamily="@font/hindvadodara_semibold"
                android:text="category"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/seller_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_bg_border"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="2dp">

                <TextView
                    android:id="@+id/bestseller_musttry_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:text="Best Seller"
                    android:textColor="#0071E3"
                    android:textSize="15dp"
                    android:textStyle="bold">
                </TextView>

                <ImageView
                    android:id="@+id/bestseller_musttry_drawable"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="1dp"
                     >
                </ImageView>

            </LinearLayout>



            <RelativeLayout
                android:id="@+id/menu_item_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/seller_header"
                android:padding="5dp"
                android:background="@drawable/item_bg_border1">

            <androidx.cardview.widget.CardView
                android:id="@+id/layout_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:backgroundTint="@color/txt_four"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp">

                <ImageView
                    android:id="@+id/menu_item_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/hederlocoplaceimg" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/menu_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_toLeftOf="@+id/menu_item_amout"
                android:layout_toRightOf="@+id/layout_logo"
                android:fontFamily="@font/hindvadodara_semibold"
                android:text="                           "
                android:textColor="#17284D"
                android:textSize="18sp" />


                <TextView
                    android:id="@+id/menu_item_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/menu_item_name"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:layout_toLeftOf="@+id/menu_item_add"
                    android:layout_toRightOf="@+id/layout_logo"
                    android:fontFamily="@font/roboto_light"
                    android:gravity="left"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="#17284D"
                    android:textSize="16sp"
                    />

            <com.borjabravo.readmoretextview.ReadMoreTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/menu_item_name"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:layout_toLeftOf="@+id/menu_item_add"
                android:layout_toRightOf="@+id/layout_logo"
                android:fontFamily="@font/roboto_light"
                android:gravity="left"
                android:textColor="#17284D"
                android:textSize="16sp"
                app:colorClickableText="@color/app_color"
                app:trimCollapsedText="@string/more"
                app:trimExpandedText="@string/less"
                app:trimLength="2"
                android:visibility="gone"
                app:trimLines="2" />



                <TextView
                    android:id="@+id/textview_avaliable_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/metropolis_semibold"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_below="@+id/menu_item_desc"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_toRightOf="@+id/layout_logo"
                    android:background="@drawable/available_time_bg"
                    android:text="Available at 12:00 AM-12:01 AM"
                    android:textColor="#0071E3"
                    android:textSize="12dp" />


                    <TextView
                        android:id="@+id/menu_item_amout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:fontFamily="@font/hindvadodara_semibold"
                        android:text="        "
                        android:textColor="@color/txt_ten"
                        android:textSize="20sp" />


                <LinearLayout
                    android:id="@+id/menu_item_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/menu_item_amout"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/menuitemaddborder"
                    android:backgroundTint="#effff7"
                    android:padding="8dp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_3sdp">

                    <TextView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@drawable/plus_addbtn"
                        android:fontFamily="@font/hindvadodara_medium"
                        android:textColor="@color/txt_ten"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/increment_decrement_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/menu_item_amout"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@drawable/add_to_cart_bg"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <!--android:background="@drawable/menuitemaddborder"-->

                        <TextView
                            android:id="@+id/qty_decrease_textview"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:gravity="center_horizontal"
                            android:text="-"
                            android:textColor="#17284d"
                            android:textSize="23sp"
                            android:textStyle="bold" />

                    <TextView
                        android:id="@+id/qty_textview_number"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="#d92662"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="01"
                        android:textColor="#FFFFFF"
                        android:textSize="13dp"
                        android:textStyle="bold" />

                        <TextView
                            android:id="@+id/qty_increase_textview"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:gravity="center_horizontal"
                            android:text="+"
                            android:textColor="#17284d"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>


        </RelativeLayout>
</RelativeLayout>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/ordermode_popup_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:cardBackgroundColor="@color/tranfer_color">


        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tranfer_color">


            <androidx.cardview.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/layout"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="-55dp"
                android:backgroundTint="#276CF6"
                app:cardCornerRadius="50dp"
                app:cardElevation="1dp"
                app:cardUseCompatPadding="true">


                <LinearLayout
                    android:id="@+id/edit_btns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/delivery_but"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_button"
                        android:backgroundTint="@color/pre_mode_bg_one">

                        <TextView
                            android:id="@+id/delivery_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="center"
                            android:text="Delivery"
                            android:textAllCaps="false"
                            android:textColor="@color/pre_mode_txt_one"
                            android:textSize="17dp" />

                        <TextView
                            android:id="@+id/delivery_tattime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/delivery_txt"
                            android:layout_marginBottom="3dp"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center"
                            android:text=""
                            android:textAllCaps="false"
                            android:textColor="@color/pre_mode_txt_one"
                            android:textSize="13dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/collection_but"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/background_button"
                        android:backgroundTint="@color/pre_mode_bg_two">

                        <TextView
                            android:id="@+id/colli_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="center"
                            android:text="Collection"
                            android:textAllCaps="false"
                            android:textColor="@color/pre_mode_txt_two"
                            android:textSize="17dp" />

                        <TextView
                            android:id="@+id/colloetion_tattime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/colli_txt"
                            android:layout_marginBottom="3dp"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center"
                            android:text=""
                            android:textAllCaps="false"
                            android:textColor="@color/pre_mode_txt_two"
                            android:textSize="13dp" />

                    </RelativeLayout>


                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/pre_rounded"
                android:orientation="vertical">


                <RelativeLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/hibg_rounded">


                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <pl.droidsonroids.gif.GifImageView
                            android:id="@+id/loading_imageView1"
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:layout_gravity="center"
                            android:src="@drawable/delivery_icon" />

                        <pl.droidsonroids.gif.GifImageView
                            android:id="@+id/loading_imageView2"
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:layout_gravity="center"
                            android:src="@drawable/collection_icon"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/sevenday_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center"
                            android:text="Select a delivery time \n up to 7 days in advance"
                            android:textColor="@color/black"
                            android:textSize="17dp" />


                        <LinearLayout
                            android:id="@+id/card_change"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/white"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/bun_asap"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="2dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/background_asap"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="center"
                                android:text="ASAP"
                                android:textAllCaps="false"
                                android:textColor="@color/menu_txt_tr"
                                android:textSize="@dimen/_12sdp" />


                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/bun_today"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/background_today"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="center"
                                android:text="Today"
                                android:textAllCaps="false"
                                android:textColor="@color/menu_txt_tr"
                                android:textSize="@dimen/_12sdp" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/bun_later"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/background_later"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="center"
                                android:text="Later"
                                android:textAllCaps="false"
                                android:textColor="@color/menu_txt_tr"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/today_time_layer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="100dp"
                            android:layout_marginRight="100dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/background_spinner"
                            android:orientation="vertical"
                            android:visibility="gone">


                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/time_today_img"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerVertical="true"
                                    android:paddingLeft="10dp"
                                    android:src="@drawable/drawableclock" />

                                <Spinner
                                    android:id="@+id/today_time"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="3dp"
                                    android:layout_toRightOf="@+id/time_today_img"
                                    android:background="@android:color/transparent"
                                    android:overlapAnchor="false"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="20dp"
                                    android:src="@drawable/downarrow" />


                            </RelativeLayout>


                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/later_time_layer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="50dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="50dp"
                                android:background="@drawable/background_spinner">

                                <ImageView
                                    android:id="@+id/date_later_img"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerVertical="true"
                                    android:paddingLeft="10dp"
                                    android:src="@drawable/date" />

                                <Spinner
                                    android:id="@+id/later_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="3dp"
                                    android:layout_toRightOf="@+id/date_later_img"
                                    android:background="@android:color/transparent"
                                    android:overlapAnchor="false"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="20dp"
                                    android:src="@drawable/downarrow" />


                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="100dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="100dp"
                                android:layout_marginBottom="10dp"
                                android:id="@+id/later_timing_layer"
                                android:background="@drawable/background_spinner">

                                <ImageView
                                    android:id="@+id/time_later_img"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerVertical="true"
                                    android:paddingLeft="10dp"
                                    android:src="@drawable/drawableclock" />

                                <Spinner
                                    android:id="@+id/later_time"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="3dp"
                                    android:layout_toRightOf="@+id/time_later_img"
                                    android:background="@android:color/transparent"
                                    android:overlapAnchor="false"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="20dp"
                                    android:src="@drawable/downarrow" />


                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>


                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/update_mode"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/menu_txt_tr"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:text="Takeaway Closed for Delivery"
                    android:textAllCaps="false"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>


