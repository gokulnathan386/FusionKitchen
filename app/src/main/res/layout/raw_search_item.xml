<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rlimg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/menu_bg"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_medium"
            android:paddingLeft="@dimen/_5sdp"
            android:text="Item"
            android:textColor="@color/txt_ten"
            android:textSize="17dp" />

        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_toLeftOf="@+id/menu_item_add"
            android:fontFamily="@font/roboto_medium"
            android:paddingLeft="@dimen/_12sdp"
            android:text="Price"
            android:textColor="@color/txt_ten"
            android:textSize="17dp" />



       <!-- <TextView
            android:id="@+id/menu_item_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="@dimen/_3sdp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/menuitemaddborder"
            android:drawableRight="@drawable/ic_baseline_add_24"
            android:drawablePadding="@dimen/_2sdp"
            android:fontFamily="@font/hindvadodara_medium"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:text="ADD"
            android:textColor="@color/txt_ten"
            android:textSize="18sp" />-->


        <LinearLayout
            android:id="@+id/menu_item_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="@drawable/menuitemaddborder"
            android:backgroundTint="#effff7"
            android:padding="8dp"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_3sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:background="@drawable/plus_addbtn"
                android:fontFamily="@font/hindvadodara_medium"
                android:textColor="@color/txt_ten"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/increment_decrement_layout"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="@drawable/add_to_cart_bg"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_toLeftOf="@+id/menu_item_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/qty_decrease_textview"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:gravity="center_horizontal"
                    android:text="-"
                    android:textColor="#17284d"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/qty_textview_number"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="#d92662"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="01"
                    android:textColor="#FFFFFF"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/qty_increase_textview"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:gravity="center_horizontal"
                    android:text="+"
                    android:textColor="#17284d"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

 </LinearLayout>



    </RelativeLayout>

</RelativeLayout>